{
  "manifest_version": 3,
  "name": "Title and URL Copier",
  "version": "1.0.0",
  "description": "Copy webpage title and URL simultaneously",
  "permissions": [
    "activeTab",
    "clipboardWrite"
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": "assets/icons/icon128.png"
  },
  "icons": {
    "128": "assets/icons/icon128.png"
  }
} 